# Backend application
APP_NAME="FlashVSR API"
APP_VERSION="0.1.0"
DEBUG=false
API_V1_PREFIX="/api"

# Database
DATABASE_URL="postgresql+psycopg2://flashvsr:flashvsr@postgres:5432/flashvsr"

# Redis / Celery
REDIS_URL="redis://redis:6379/0"
CELERY_BROKER_URL="redis://redis:6379/1"
CELERY_RESULT_BACKEND="redis://redis:6379/2"

# Storage / Model paths (相对于 backend/ 目录)
STORAGE_ROOT="./storage"
MODEL_ROOT="./models"
FLASHVSR_MODEL_PATH="./models/FlashVSR-v1.1"
FLASHVSR_VERSION="v1.1"
MAX_UPLOAD_SIZE=2147483648
TASK_RETENTION_DAYS=30
DEFAULT_MODEL_VARIANT="tiny"

# Default processing parameters
DEFAULT_SCALE=4.0
DEFAULT_SPARSE_RATIO=2.0
DEFAULT_LOCAL_RANGE=11
DEFAULT_SEED=0

# CORS (允许的前端地址)
BACKEND_CORS_ORIGINS='["http://localhost:3000","http://localhost:5173"]'

